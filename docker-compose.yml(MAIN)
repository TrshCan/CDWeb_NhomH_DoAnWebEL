version: "3.9"

services:
  db:
    image: mysql:8
    container_name: project-db
    restart: always
    environment:
      MYSQL_ROOT_PASSWORD: rootpassword
      MYSQL_DATABASE: projectdb
      MYSQL_USER: user
      MYSQL_PASSWORD: password
      TZ: Asia/Ho_Chi_Minh
    command: --default-time-zone='+07:00'
    ports:
      - "3306:3306"
    volumes:
      - dbdata:/var/lib/mysql

  backend:
    build:
      context: ./be
      dockerfile: Dockerfile.dev
    container_name: project-be
    restart: unless-stopped
    ports:
      - "9000:9000"
    volumes:
      - ./be:/var/www
    environment:
      DB_HOST: db
      DB_PORT: 3306
      DB_DATABASE: projectdb
      DB_USERNAME: user
      DB_PASSWORD: password
      TZ: Asia/Ho_Chi_Minh
    depends_on:
      - db

  nginx:
    image: nginx:alpine
    container_name: project-nginx
    restart: unless-stopped
    ports:
      - "8000:80"
    volumes:
      - ./be:/var/www
      - ./be/nginx/default.conf:/etc/nginx/conf.d/default.conf
    depends_on:
      - backend

  frontend:
    build:
      context: ./fe
      dockerfile: Dockerfile.dev   # ⚠️ dùng file dev
    container_name: project-fe
    restart: unless-stopped
    ports:
      - "5173:5173"
    volumes:
      - ./fe:/app
      - /app/node_modules
    environment:
      - CHOKIDAR_USEPOLLING=true
      - WATCHPACK_POLLING=true
    depends_on:
      - backend
    command: npm run dev -- --host

  phpmyadmin:
    image: phpmyadmin:latest
    container_name: project-phpmyadmin
    restart: unless-stopped
    environment:
      PMA_HOST: db
      PMA_USER: root
      PMA_PASSWORD: rootpassword
    ports:
      - "8080:80"
    depends_on:
      - db

volumes:
  dbdata: